<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JunkCodeRemover" x:Class="JunkCodeRemover.JunkCodeRemoverView" 
             mc:Ignorable="d" 
            >
    <Grid Height="550" Width="580">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="235*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Junk Code Remover" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="86,10,186,10" Height="24" Width="158"/>
        <TextBox Margin="10" AcceptsReturn="True" Text="{Binding HTML}" Grid.Row="1" Grid.Column="1" />
        <Button Grid.Row="2" Margin="19,2,100,2" Content="Clear Formatting" Command="{Binding SanitizeCommand}" Grid.Column="1"/>
        <ListView Grid.Row="1" Background="{x:Null}" Foreground="White">
            <TreeViewItem Header="Tags" Foreground="White" ItemsSource="{Binding AllowedTags}"/>
            <TreeViewItem Header="Styles" Foreground="White" ItemsSource="{Binding AllowedStyles}"/>
            <TreeViewItem Header="Attributes" Foreground="White" ItemsSource="{Binding AllowedAttributes}"/>
        </ListView>
    </Grid>
</UserControl>
